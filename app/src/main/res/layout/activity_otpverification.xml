        app:layout_constraintTop_toTopOf="@+id/otpBox4" />

    <EditText
        android:id="@+id/otpBox6"
        style="@style/OtpEditTextStyle"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/otpBox5"
        app:layout_constraintStart_toEndOf="@+id/otpBox5"
        app:layout_constraintTop_toTopOf="@+id/otpBox5" />

    <Button
